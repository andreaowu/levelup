      script(type='text/javascript')
        $("h4").hide();
        $("#drawCard").hide();
        $("#whoisdrawing").hide();
        $("#yougotthiscard").hide();
        $("#takingturn").hide();
        $("#partner").hide();
        $("h10").hide();

        var name;
        var cards = [];
        var margintop = 0;
        var declare = 0;
        var suitDec;
        var numDec;
        var onLevel;
        var idNum = 0;
        var nobody = 0;

        $("#joinGame").click(function () {
          var enteredData = prompt("What's your name?");
          socket.emit('join', enteredData);
          name = enteredData;
          $(this).hide(function () {
            $(this).remove();
          });
          $("h4").show();
        });

        $("#drawCard").click(function () {
          socket.emit('drew');
          $("#drawCard").hide();
        });

        socket.on('start', function () {
          $("#drawCard").show();
        });

        socket.on('level', function (players, numbers) {
          $("h4").hide();
          for (var i = 0; i < 4; i++) {
            if (numbers[i] > 10) {
              if (numbers[i] == 11) {
                numbers[i] = "J";
              } else if (numbers[i] == 12) {
                numbers[i] = "Q";
              } else {
                numbers[i] = "K";
              }
            }
            document.getElementById("name" + i).innerHTML = players[i] + ", level: " + numbers[i];
          }
          $("#name0").css("margin-left", "50px")
          $("#name0").css("margin-top", "-263px")
          $("#name1").css("margin-right", "208px")
          $("#name1").css("float", "right")
          $("#name1").css("margin-top", "-150px")
          $("#name1").css("margin-left", "-210px")
          $("#name2").css("margin-left", "53px")
          $("#name2").css("margin-top", "8px")
          $("#name3").css("margin-left", "210px")
          $("#name3").css("margin-top", "-175px")
          $("#name3").css("margin-right", "-200px")
          $("h3").show();
          socket.emit('start');
        });

        socket.on('personal level', function(level) {
          if (level == 11) {
            onLevel = "J ";
          } else if (level == 12) {
            onLevel = "Q ";
          } else if (level == 13) {
            onLevel = "K ";
          } else {
            onLevel = level;
          }
        });

        socket.on('drawing', function(name) {
          document.getElementById("whoisdrawing").innerHTML = name + " is drawing a card";
          $("#whoisdrawing").css("text-align", "center")
          $("#whoisdrawing").css("margin-top", "80px")
          $("#whoisdrawing").show();
        });

        socket.on('giveCard', function(card) {
          console.log("card: " + card + "level: " + onLevel + ".");
          var cardSuit = card.substring(0, card.length - 2);
          var cardNum = card.substring(card.length - 2, card.length);
          var str = "<input type='image' id ='" + idNum + "' src='" + cardSuit + "'><p>" + cardNum + "</p>";
          $("<h6>" + str).appendTo(document.body);
          var elem = document.getElementById("" + idNum);
          elem.onclick = function() { declareACard(cardSuit, cardNum) };
          console.log(elem);
          idNum += 1;
          binarySearch(card);
        });

        function declareACard(suit, num) {
          $("h10").hide();
          console.log(suit);
          console.log(num);
          socket.emit('declare', name, suit, num);
        };

        socket.on('cannotDeclare', function() {
          alert("You cannot declare that!");
        });

        socket.on('declarationHappened', function (player, suit, number) {
          $("h10").hide();
          alert(player + " declared!");
          if (number == 11) {
            number = "J";
          } else if (number == 12) {
            number = "Q";
          } else if (number == 13) {
            number = "K";
          }
          document.getElementById("declaration").innerHTML = player + " declared: " + number +  " of <img src='" + suit + "' height = '25px'>!";
          declare = 1;
          suitDec = suit;
          numDec = number;
          $("#declaration").show();
        });

        socket.on('someoneDeclare', function() {
          console.log("someonedeclare");
          $("h10").show();
          $("#whoisdrawing").hide();
          console.log("end of someonedeclare");
        });

        socket.on('who stacking', function(name) {
          console.log("who stacking begin");
          $("#whoisdrawing").hide();
          var factor = 0;
          var i = cards.length - 1;
          var trumpNums = [];
          while (i > trumpNums.length + factor) {
            if (cards[i].substring(cards[i].length - 2, cards[i].length) == numDec) {
              factor += 1;
              trumpNums.push(cards[i]);
            }
            cards[i] = cards[i - factor];
          }
          for (var j = i - 1, i = 0; j > trumpNums.length; j--, i++) {
            cards[j] = trumpNums[i];
          }
          alert("Game starting, " + name + " is stacking cards.");
        });

        socket.on('stack', function(cards) {
          console.log("here's the stack");
          alert("Here's your stack");
          for (var i = 0; i < 4; i++) {
            console.log("hi cards");
            var cardSuit = cards[i].substring(0, cards[i].length - 2);
            var cardNum = cards[i].substring(cards[i].length - 2, cards[i].length);
            var str = "<input type='image' id ='" + idNum + "' src='" + cardSuit + "'><p>" + cardNum + "</p>";
            $("<h6>" + str).appendTo(document.body);
          }


          alert("Choose four cards to stack");
          var stacked = 0;
          $("h6").click(function () {
            socket.emit('stacked', this);
            $(this).hide(function () {
              $(this).remove();
            });
            stacked += 1;
            if (stacked == 4) {
              var partner = alert("What card is your partner?");
              socket.emit('done stacking', partner);
            }
          });
        });

        socket.on('who taking turn', function(name) {
          document.getElementById("takingturn").innerHTML = name + " is playing a card";
          $("takingturn").show();
        });

        socket.on('partner', function(partner, declarer) {
          document.getElementById("partner").innerHTML = "The person who plays " + partner + " is " + declarer + "'s partner";
          $("partner").show();
        });

        socket.on('taking turn', function() {});

        socket.on('goodbye', function () {
          $("h4").hide();
          alert("Sorry, table at capacity");
          document.getElementById("waiting").innerHTML = "Table at capacity";
          $("h4").show();
        });

        socket.on('announceLeave', function(person) {
          $("h3").hide();
          $("h4").show();
          $("h5").hide();
          alert(person + " left the game...need to wait");
        });

        socket.on('rejoined', function() {
          alert("Four people in the game again yay!");
        });

